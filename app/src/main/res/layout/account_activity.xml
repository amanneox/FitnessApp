<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/back_arrow_padding"
                android:fontFamily="@font/bold"
                android:text="User Name"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/detail"
                android:layout_below="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/back_arrow_padding"
                android:fontFamily="@font/semibold"
                android:text="View and edit profile"
                android:textColor="@color/colorLightGrey"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/display"
                android:layout_width="@dimen/profile_pic"
                android:layout_height="@dimen/profile_pic"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/sign_up_margin"
                android:scaleType="centerCrop"
                 />

        </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/sign_up_margin">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:stateListAnimator="@null"
                    app:cardElevation="@null"
                    app:cardCornerRadius="16dp"
                    android:layout_margin="@dimen/button_margin"
                    app:cardBackgroundColor="@color/colorAqua"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/img_notify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/icon_margin"
                            app:srcCompat="@drawable/ic_notification" />

                        <TextView
                            android:id="@+id/text_notify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:fontFamily="@font/semibold"
                            android:textSize="20sp"
                            android:textColor="@color/colorBlack"
                            android:layout_margin="@dimen/button_margin"
                            android:layout_toEndOf="@+id/img_notify"
                            android:text="Notification" />

                        <TextView
                            android:id="@+id/text_notify1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/text_notify"
                            android:layout_below="@+id/text_notify"
                            android:fontFamily="@font/medium"
                            android:text="Modify notification settings"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="6dp"
                            android:textColor="@color/colorLightGrey" />

                        <ImageView
                            android:id="@+id/img_next1"
                            android:layout_margin="@dimen/button_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/ic_skip" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/options"
                    android:layout_width="match_parent"
                    android:stateListAnimator="@null"
                    app:cardElevation="@null"
                    app:cardCornerRadius="16dp"
                    android:layout_margin="@dimen/button_margin"
                    app:cardBackgroundColor="@color/colorAqua"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/img_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/icon_margin"
                            app:srcCompat="@drawable/ic_settings_cog" />

                        <TextView
                            android:id="@+id/text_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:fontFamily="@font/semibold"
                            android:textSize="20sp"
                            android:textColor="@color/colorBlack"
                            android:layout_margin="@dimen/button_margin"
                            android:layout_toEndOf="@+id/img_settings"
                            android:text="Options" />

                        <TextView
                            android:id="@+id/text_settings1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/text_settings"
                            android:layout_below="@+id/text_settings"
                            android:fontFamily="@font/medium"
                            android:text="Manage app settings"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="6dp"
                            android:textColor="@color/colorLightGrey" />

                        <ImageView
                            android:id="@+id/img_settings1"
                            android:layout_margin="@dimen/button_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/ic_skip" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:stateListAnimator="@null"
                    app:cardElevation="@null"
                    app:cardCornerRadius="16dp"
                    android:layout_margin="@dimen/button_margin"
                    app:cardBackgroundColor="@color/colorAqua"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/img_invite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/icon_margin"
                            app:srcCompat="@drawable/ic_add_person" />

                        <TextView
                            android:id="@+id/text_invite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:fontFamily="@font/semibold"
                            android:textSize="20sp"
                            android:textColor="@color/colorBlack"
                            android:layout_margin="@dimen/button_margin"
                            android:layout_toEndOf="@+id/img_invite"
                            android:text="Invite Friends" />

                        <TextView
                            android:id="@+id/text_invite1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/text_invite"
                            android:layout_below="@+id/text_invite"
                            android:fontFamily="@font/medium"
                            android:text="Invite your friends to use app"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="6dp"
                            android:textColor="@color/colorLightGrey" />

                        <ImageView
                            android:id="@+id/img_invite1"
                            android:layout_margin="@dimen/button_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/ic_skip" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>




        </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>