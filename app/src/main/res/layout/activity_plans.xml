<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plans"
                android:layout_margin="@dimen/back_arrow_padding"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/bold"
                android:textSize="32sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="@dimen/button_margin"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="2"
                card_view:cardBackgroundColor="@color/colorAqua"
                card_view:cardElevation="@null"
                android:stateListAnimator="@null"
                card_view:cardCornerRadius="12dp"
                card_view:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="@string/app_name"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/colorLightGrey"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/plan1"
                        android:layout_below="@id/time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/bold"
                        android:textColor="@color/colorBlack"
                        />

                    <me.tankery.lib.circularseekbar.CircularSeekBar
                        android:id="@+id/progressBar"
                        android:layout_below="@id/plan1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:indeterminate="false"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        app:cs_maintain_equal_circle="true"
                        app:cs_circle_style="round"
                        app:cs_disable_pointer="true"/>

                    <TextView
                        android:id="@+id/remain1"
                        android:layout_below="@id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="14sp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/colorLightGrey"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_weight="2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                card_view:cardElevation="@null"
                android:stateListAnimator="@null"
                card_view:cardBackgroundColor="@color/colorAqua"
                card_view:cardCornerRadius="12dp"
                card_view:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="@string/app_name"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/plan2"
                        android:layout_below="@id/time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/bold"
                        android:textColor="@color/colorBlack"
                        />

                    <me.tankery.lib.circularseekbar.CircularSeekBar
                        android:id="@+id/progressBar2"
                        android:layout_below="@id/plan2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:indeterminate="false"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        app:cs_maintain_equal_circle="true"
                        app:cs_circle_style="round"
                        app:cs_disable_pointer="true"/>

                    <TextView
                        android:id="@+id/remain2"
                        android:layout_below="@id/progressBar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="14sp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/colorLightGrey"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_3"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="@dimen/button_margin"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view4"
                card_view:cardBackgroundColor="@color/colorAqua"
                android:stateListAnimator="@null"
                card_view:cardElevation="@null"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="2"
                card_view:cardCornerRadius="12dp"
                card_view:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/time3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="@string/app_name"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/plan3"
                        android:layout_below="@id/time3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/bold"
                        android:textColor="@color/colorBlack"
                        />

                    <me.tankery.lib.circularseekbar.CircularSeekBar
                        android:id="@+id/progressBar3"
                        android:layout_below="@id/plan3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:indeterminate="false"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        app:cs_maintain_equal_circle="true"
                        app:cs_circle_style="round"
                        app:cs_disable_pointer="true"/>
                    <TextView
                        android:id="@+id/remain3"
                        android:layout_below="@id/progressBar3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="14sp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/colorLightGrey"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_weight="2"
                card_view:cardBackgroundColor="@color/colorAqua"
                android:stateListAnimator="@null"
                card_view:cardElevation="@null"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="12dp"
                card_view:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/time4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="@string/app_name"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/plan4"
                        android:layout_below="@id/time4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/bold"
                        android:textColor="@color/colorBlack"
                        />

                    <me.tankery.lib.circularseekbar.CircularSeekBar
                        android:id="@+id/progressBar4"
                        android:layout_below="@id/plan4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:indeterminate="false"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        app:cs_maintain_equal_circle="true"
                        app:cs_circle_style="round"
                        app:cs_disable_pointer="true"/>
                    <TextView
                        android:id="@+id/remain4"
                        android:layout_below="@id/progressBar4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="14sp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/colorLightGrey"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>