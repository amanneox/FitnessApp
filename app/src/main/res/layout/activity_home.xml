<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/back_arrow_padding"
                    android:fontFamily="@font/bold"
                    android:text="Activities"
                    android:textColor="@color/colorBlack"
                    android:textSize="32sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/sign_up_margin">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    card_view:cardBackgroundColor="@color/colorAqua"
                    android:layout_height="match_parent"
                    card_view:cardElevation="@null"
                    android:stateListAnimator="@null"
                    card_view:cardCornerRadius="16dp"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/icon1"
                            android:layout_margin="@dimen/button_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_walk"

                            />

                        <TextView
                            android:id="@+id/act1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon1"
                            android:layout_margin="@dimen/button_margin"
                            android:fontFamily="@font/bold"
                            android:text="Walking + Running"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/value1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@+id/icon1"
                            android:textSize="30sp"
                            android:fontFamily="@font/black"
                            android:layout_marginEnd="@dimen/sign_up_margin"
                            android:text="@string/app_name" />

                        <TextView
                            android:id="@+id/time1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/value1"
                            android:fontFamily="@font/semibold"
                            android:textColor="@color/colorLightGrey"
                            android:layout_alignParentEnd="true"
                            android:text="@string/app_name"
                            android:layout_margin="@dimen/sign_up_margin"
                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    card_view:cardBackgroundColor="@color/colorAqua"
                    android:layout_height="match_parent"
                    card_view:cardElevation="@null"
                    android:layout_marginTop="@dimen/sign_up_margin"
                    android:stateListAnimator="@null"
                    card_view:cardCornerRadius="16dp"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_margin="@dimen/button_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_steps"

                            />

                        <TextView
                            android:id="@+id/act2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon2"
                            android:layout_margin="@dimen/button_margin"
                            android:fontFamily="@font/bold"
                            android:text="Steps"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/value2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@+id/icon2"
                            android:textSize="30sp"
                            android:fontFamily="@font/black"
                            android:layout_marginEnd="@dimen/sign_up_margin"
                            android:text="@string/app_name" />

                        <TextView
                            android:id="@+id/time2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/value2"
                            android:fontFamily="@font/semibold"
                            android:textColor="@color/colorLightGrey"
                            android:layout_alignParentEnd="true"
                            android:text="@string/app_name"
                            android:layout_margin="@dimen/sign_up_margin"
                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    card_view:cardBackgroundColor="@color/colorAqua"
                    android:layout_height="match_parent"
                    card_view:cardElevation="@null"
                    android:layout_marginTop="@dimen/sign_up_margin"
                    android:stateListAnimator="@null"
                    card_view:cardCornerRadius="16dp"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/icon3"
                            android:layout_margin="@dimen/button_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bike"

                            />

                        <TextView
                            android:id="@+id/act3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon3"
                            android:layout_margin="@dimen/button_margin"
                            android:fontFamily="@font/bold"
                            android:text="Cycling"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/value3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@+id/icon3"
                            android:textSize="30sp"
                            android:fontFamily="@font/black"
                            android:layout_marginEnd="@dimen/sign_up_margin"
                            android:text="@string/app_name" />

                        <TextView
                            android:id="@+id/time3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/value3"
                            android:fontFamily="@font/semibold"
                            android:textColor="@color/colorLightGrey"
                            android:layout_alignParentEnd="true"
                            android:text="@string/app_name"
                            android:layout_margin="@dimen/sign_up_margin"
                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>