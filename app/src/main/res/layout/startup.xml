<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_back_margin"
            android:contentDescription="login_back"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/login_back"
            tools:ignore="HardcodedText" />

    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:padding="@dimen/policy_padding"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/sign_btn"
            android:padding="@dimen/button_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:text="@string/sign"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="@dimen/sign_up_margin"
            android:background="@drawable/round_button2"
            />

        <Button
            android:id="@+id/use_btn"
            android:padding="@dimen/button_margin"
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/sign_up_margin"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:text="@string/useapp"
            android:background="@drawable/rounded_button"
            />

        <TextView
            android:id="@+id/sign_in"
            android:gravity="center"
            android:textColor="@color/colorLightGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account? Sign in"
            />

    </LinearLayout>
</RelativeLayout>